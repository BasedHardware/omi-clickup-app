# ClickUp OAuth Credentials (from app.clickup.com/settings/apps)
CLICKUP_CLIENT_ID=your_client_id_here
CLICKUP_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URL (must match ClickUp app settings)
# Local: http://localhost:8000/auth/callback
# Production: https://your-app-name.up.railway.app/auth/callback
OAUTH_REDIRECT_URL=http://localhost:8000/auth/callback

# OpenAI API Key (for AI task extraction)
OPENAI_API_KEY=your_openai_api_key_here

# App Settings
APP_HOST=0.0.0.0
APP_PORT=8000

